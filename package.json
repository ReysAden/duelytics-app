{
  "name": "duelytics-app",
  "version": "1.0.3",
  "description": "Yu-Gi-Oh! Master Duel Tournament Tracker",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-table": "^8.21.3",
    "chart.js": "^4.5.1",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.5",
    "electron-updater": "^6.1.1",
    "i18next": "^25.6.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.17.0",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "electron-builder": "^24.6.4",
    "vite": "^7.1.10",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.duelytics.app",
    "productName": "Duelytics",
    "electronDist": "node_modules/electron/dist",
    "electronVersion": "38.3.0",
    "protocols": {
      "name": "duelytics",
      "schemes": [
        "duelytics"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      "assets/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/AppIcon.png",
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "ReysAden",
      "repo": "duelytics-app"
    }
  }
}
